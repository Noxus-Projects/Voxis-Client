{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "renderer/components/*"
      ],
      "@type/*": [
        "renderer/@types/*"
      ],
      "@utils/*": [
        "renderer/utils/*"
      ],
      "@config": [
        "renderer/config.ts"
      ],
    },
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "renderer/next-env.d.ts",
    "renderer/**/*.ts",
    "renderer/**/*.tsx",
    "main/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "renderer/next.config.js",
    "app",
    "dist"
  ]
}